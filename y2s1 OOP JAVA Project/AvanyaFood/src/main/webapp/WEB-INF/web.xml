<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.customer.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
    
	
	
	<servlet>
		<servlet-name>shoplogin</servlet-name>
		<servlet-class>com.shop.ShopLoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>shoplogin</servlet-name>
		<url-pattern>/shopLogin</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>additemServlet</servlet-name>
		<servlet-class>com.itemmanage.AdditemServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>additemServlet</servlet-name>
		<url-pattern>/additem</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>itemupdateServlet</servlet-name>
		<servlet-class>com.itemmanage.ItemupdateServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>itemupdateServlet</servlet-name>
		<url-pattern>/updateitem</url-pattern>
	</servlet-mapping>
	

	
	
</web-app>